{
  "name": "ai-context-util",
  "displayName": "AI Context Util",
  "version": "3.1.0",
  "description": "Transform your testing workflow with AI-powered context utilities. Auto-detect changed tests, real-time watching, and smart project discovery with Copilot integration.",
  "main": "./out/extension.js",
  "publisher": "ai-context-util",
  "categories": [
    "Testing",
    "Other"
  ],
  "icon": "icon/icon.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [

      {
        "command": "aiDebugContext.runSetup",
        "title": "🍎 Run Setup Wizard",
        "category": "AI Context Util",
        "icon": "$(settings-gear)"
      },
      {
        "command": "aiDebugContext.showWorkspaceInfo",
        "title": "📊 Show Workspace Info",
        "category": "AI Context Util",
        "icon": "$(info)"
      },
      {
        "command": "aiDebugContext.runCopilotInstructionContexts",
        "title": "🤖 Add Copilot Instruction Contexts",
        "category": "AI Context Util",
        "icon": "$(copilot)"
      },
      {
        "command": "aiDebugContext.runGitAffected",
        "title": "⚡ Test Updated Files",
        "category": "AI Context Util",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "aiDebugContext.rerunProjectTests",
        "title": "🔄 Re-Run Project Tests",
        "category": "AI Context Util",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "aiDebugContext.runAffectedTests"
        },
        {
          "command": "aiDebugContext.startFileWatcher"
        },
        {
          "command": "aiDebugContext.clearTestCache"
        },
        {
          "command": "aiDebugContext.runSetup"
        },
        {
          "command": "aiDebugContext.runCopilotInstructionContexts"
        },
        {
          "command": "aiDebugContext.selectProject"
        },
        {
          "command": "aiDebugContext.showWorkspaceInfo"
        },
        {
          "command": "aiDebugContext.runGitAffected"
        },
        {
          "command": "aiDebugContext.createConfig"
        },
        {
          "command": "aiDebugContext.rerunProjectTests"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aiDebugContext.runAffectedTests",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "aiDebugContext.startFileWatcher",
        "key": "ctrl+shift+w",
        "mac": "cmd+shift+w"
      },
      {
        "command": "aiDebugContext.clearTestCache",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      },
      {
        "command": "aiDebugContext.runGitAffected",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "!terminalFocus"
      },
      {
        "command": "aiDebugContext.rerunProjectTests",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "!terminalFocus"
      }
    ],
    "configuration": {
      "title": "AI Debug Context",
      "properties": {
        "aiDebugContext.projectCache": {
          "type": "object",
          "default": {},
          "description": "Cached project discovery data for faster startup"
        },
        "aiDebugContext.recentProjects": {
          "type": "array",
          "default": [],
          "description": "Recently used projects for quick access",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "lastUsed": {
                "type": "string"
              },
              "testCount": {
                "type": "number"
              }
            }
          }
        },
        "aiDebugContext.maxCacheAge": {
          "type": "number",
          "default": 30,
          "description": "Maximum age of project cache in minutes"
        },
        "aiDebugContext.enableFileWatcher": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic file watching for changes"
        },
        "aiDebugContext.enableVerboseLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging for debugging"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --coverageReporters=text-lcov --passWithNoTests",
    "test:unit": "jest --testPathPattern='__tests__/unit'",
    "test:integration": "jest --testPathPattern='__tests__/integration'",
    "dev": "npm run watch",
    "dev:setup": "node scripts/dev-setup.js",
    "dev:setup:shell": "./scripts/dev-setup.sh",
    "clean": "rm -rf out/ .jest-cache/",
    "package": "vsce package",
    "publish": "vsce publish",
    "quick-test": "./scripts/quick-test.sh || echo 'Run dev setup first'"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.19.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=18.0.0"
  },
  "keywords": [
    "testing",
    "tdd",
    "test-driven-development",
    "affected-tests",
    "file-watching",
    "git-integration",
    "project-discovery",
    "performance",
    "developer-productivity",
    "nx-workspace",
    "monorepo",
    "jest",
    "parallel-testing",
    "clean-architecture",
    "phase-1-8"
  ],
  "author": "AI Debug Context Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-debug-context/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/ai-debug-context/vscode-extension/issues"
  },
  "homepage": "https://github.com/ai-debug-context/vscode-extension#readme",
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "bundledDependencies": [
    "js-yaml"
  ]
}
