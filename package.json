{
  "name": "ai-context-util",
  "displayName": "AI Context Util",
  "version": "3.5.0",
  "description": "Generate GitHub Copilot instructions from your ESLint/Prettier configs. Automatically creates framework-specific guidance with user overrides, workspace analysis, and intelligent debugging context.",
  "main": "./out/extension.js",
  "publisher": "ai-context-util",
  "categories": [
    "AI",
    "Other",
    "Linters"
  ],
  "icon": "icon/atomic_debug_logo.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "aiDebugContext.runAffectedTests",
        "title": "ðŸ§ª Open Testing Menu",
        "category": "AI Context Util",
        "icon": "$(beaker)"
      },
      {
        "command": "aiDebugContext.runSetup",
        "title": "ðŸŽ Setup",
        "category": "AI Context Util",
        "icon": "$(settings-gear)"
      },
      {
        "command": "aiDebugContext.showWorkspaceInfo",
        "title": "ðŸ“Š Show Workspace Info",
        "category": "AI Context Util",
        "icon": "$(info)"
      },
      {
        "command": "aiDebugContext.addCopilotInstructionContexts",
        "title": "ðŸ¤– Copilot Instructions",
        "category": "AI Context Util",
        "icon": "$(copilot)"
      },
      {
        "command": "aiDebugContext.runGitAffected",
        "title": "âš¡ Test Updated Files",
        "category": "AI Context Util",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "aiDebugContext.rerunProjectTests",
        "title": "â†» Test Recent",
        "category": "AI Context Util",
        "icon": "$(refresh)"
      },
      {
        "command": "aiDebugContext.prepareToPush",
        "title": "ðŸš€ Prepare To Push",
        "category": "AI Context Util",
        "icon": "$(git-commit)"
      },
      {
        "command": "aiDebugContext.generatePRDescription",
        "title": "ðŸ“ PR Description",
        "category": "AI Context Util",
        "icon": "$(git-pull-request)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "aiDebugContext.runAffectedTests"
        },
        {
          "command": "aiDebugContext.runSetup"
        },
        {
          "command": "aiDebugContext.showWorkspaceInfo"
        },
        {
          "command": "aiDebugContext.runGitAffected"
        },
        {
          "command": "aiDebugContext.rerunProjectTests"
        },
        {
          "command": "aiDebugContext.addCopilotInstructionContexts"
        },
        {
          "command": "aiDebugContext.prepareToPush"
        },
        {
          "command": "aiDebugContext.generatePRDescription"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aiDebugContext.runAffectedTests",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "aiDebugContext.runGitAffected",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "!terminalFocus"
      },
      {
        "command": "aiDebugContext.rerunProjectTests",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "!terminalFocus"
      }
    ],
    "configuration": {
      "title": "AI Debug Context",
      "properties": {
        "aiDebugContext.projectCache": {
          "type": "object",
          "default": {},
          "description": "Cached project discovery data for faster startup"
        },
        "aiDebugContext.recentProjects": {
          "type": "array",
          "default": [],
          "description": "Recently used projects for quick access (legacy - use recentProjectsByWorkspace)",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "lastUsed": {
                "type": "string"
              },
              "testCount": {
                "type": "number"
              }
            }
          }
        },
        "aiDebugContext.recentProjectsByWorkspace": {
          "type": "object",
          "default": {},
          "description": "Recently used projects organized by workspace for workspace-specific test history",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "lastUsed": {
                  "type": "string"
                },
                "testCount": {
                  "type": "number"
                },
                "lastUsedTimestamp": {
                  "type": "number"
                }
              }
            }
          }
        },
        "aiDebugContext.maxCacheAge": {
          "type": "number",
          "default": 30,
          "description": "Maximum age of project cache in minutes"
        },
        "aiDebugContext.enableFileWatcher": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic file watching for changes"
        },
        "aiDebugContext.enableVerboseLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging for debugging"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --coverageReporters=text-lcov --passWithNoTests",
    "test:unit": "jest --testPathPattern='__tests__/unit'",
    "test:integration": "jest --testPathPattern='__tests__/integration'",
    "dev": "npm run watch",
    "dev:setup": "node scripts/dev-setup.js",
    "dev:setup:shell": "./scripts/dev-setup.sh",
    "clean": "rm -rf out/ .jest-cache/",
    "package": "vsce package",
    "publish": "vsce publish",
    "quick-test": "./scripts/quick-test.sh || echo 'Run dev setup first'"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.19.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=18.0.0"
  },
  "keywords": [
    "testing",
    "tdd",
    "test-driven-development",
    "affected-tests",
    "file-watching",
    "git-integration",
    "project-discovery",
    "performance",
    "developer-productivity",
    "nx-workspace",
    "monorepo",
    "jest",
    "parallel-testing",
    "clean-architecture",
    "phase-3-5-0",
    "copilot-instructions",
    "eslint-translation",
    "prettier-integration",
    "user-overrides"
  ],
  "author": "AI Debug Context Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-debug-context/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/ai-debug-context/vscode-extension/issues"
  },
  "homepage": "https://github.com/ai-debug-context/vscode-extension#readme",
  "dependencies": {
    "cosmiconfig": "^9.0.0",
    "eslint": "^8.57.0",
    "find-up": "^7.0.0",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "prettier": "^3.2.5"
  },
  "bundledDependencies": [
    "js-yaml",
    "eslint",
    "prettier",
    "cosmiconfig",
    "find-up",
    "json5"
  ],
  "bundleDependencies": [
    "js-yaml",
    "eslint",
    "prettier",
    "cosmiconfig",
    "find-up",
    "json5"
  ]
}
